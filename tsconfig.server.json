{
  "compilerOptions": {
    "target": "es2016",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "outDir": "./build/server",
    "baseUrl": "./src",
    "paths": {
      "client": ["./client"],
      "client/*": ["./client/*"],
      "server": ["./server"],
      "server/*": ["./server/*"]
    }
  },
  "include": ["src/server"],
  "exclude": [
    "*.test.ts",
    "**/*.test.ts",
  ]
}
